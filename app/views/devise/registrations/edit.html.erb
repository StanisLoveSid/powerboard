<div id="page_wrapper">
<h4>Аккаунт</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

 <div class="form-group">
        Аватар
        <div class="col-sm-6">
            <%= f.file_field :avatar, class: "btn" %>
        </div>
    </div>


  <div> Имя  <br />
  <%= f.text_field :name, autofocus: true, style: "width: 40%" %></div>



  <div> Почта <br />
  <%= f.email_field :email, autofocus: true, style: "width: 40%" %></div>
  <br>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div> Пароль <br />
    <%= f.password_field :password, autocomplete: "off", style: "width: 40%" %></div>

  <div> Подтверждение пароля <br />
    <%= f.password_field :password_confirmation, autocomplete: "off", style: "width: 40%" %></div>
<% if f.object.encrypted_password.present? %>
  <div>Нынешний пароль<br />
    <%= f.password_field :current_password, autocomplete: "off", style: "width: 40%" %></div>
<% end %>
  <div><%= f.submit "Обновить", class: "btn" %></div>
  
<% end %>

<h4>Удалить аккаунт</h4>

<p>Не довольны? <%= button_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete, class: "btn" %></p>

<%= link_to "Назад", :back %>
</div>
